<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane stylesheets="@../css/modern-style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
        <!-- Top Header -->
        <top>
            <HBox alignment="CENTER" spacing="20" style="-fx-background-radius: 0 0 12 12;" styleClass="card">
                <padding>
                    <Insets bottom="15" left="25" right="25" top="15" />
                </padding>
                <Label style="-fx-font-size: 20px; -fx-text-fill: -primary-dark; -fx-font-weight: bold;" text="HỆ THỐNG QUẢN LÝ" />
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="logoutButton" style="-fx-background-color: #EF5350; -fx-text-fill: white;" text="Đăng xuất" />
            </HBox>
        </top>
        
        <!-- Sidebar Navigation -->
        <left>
            <VBox alignment="TOP_CENTER" prefWidth="250" spacing="10" styleClass="sidebar">
                <padding>
                    <Insets bottom="30" left="15" right="15" top="30" />
                </padding>
                <Button fx:id="dashboardButton" style="-fx-background-color: -primary-color; -fx-text-fill: -light-text;" styleClass="sidebar-button" text="Bảng điều khiển" />
                <Button fx:id="patientButton" styleClass="sidebar-button" text="Quản lý Bệnh nhân" />
                <Button fx:id="appointmentButton" styleClass="sidebar-button" text="Quản lý Cuộc hẹn" />
                <Button fx:id="profileButton" styleClass="sidebar-button" text="Hồ sơ cá nhân" />
                <Button fx:id="accountButton" styleClass="sidebar-button" text="Quản lý Tài khoản" />
                <Button fx:id="reportButton" styleClass="sidebar-button" text="Thống kê &amp; Báo cáo" />
                <Region VBox.vgrow="ALWAYS" />
                <Label style="-fx-text-fill: #757575; -fx-font-size: 12px;" text="Phiên bản 2.0.0" />
            </VBox>
        </left>
        
        <!-- Main Content -->
        <center>
            <VBox spacing="25" style="-fx-padding: 30;">
                <!-- Summary Cards -->
                <HBox alignment="TOP_CENTER" spacing="25">
                    <!-- Patient Summary Card -->
                    <VBox fx:id="patientSummaryCard" minHeight="150" prefWidth="280" spacing="15" styleClass="card">
                        <Label style="-fx-text-fill: #616161; -fx-font-size: 14px;" text="TỔNG BỆNH NHÂN" />
                        <Label fx:id="totalPatientLabel" style="-fx-text-fill: -primary-dark; -fx-font-size: 36px; -fx-font-weight: bold;" />
                        <HBox fx:id="newPatientContainer" alignment="CENTER_LEFT" spacing="10" visible="false" />
                    </VBox>
                    
                    <!-- Appointment Summary Card -->
                    <VBox fx:id="appointmentSummaryCard" minHeight="150" prefWidth="280" spacing="15" styleClass="card">
                        <Label style="-fx-text-fill: #616161; -fx-font-size: 14px;" text="CUỘC HẸN HÔM NAY" />
                        <Label fx:id="todayAppointmentLabel" style="-fx-text-fill: -primary-dark; -fx-font-size: 36px; -fx-font-weight: bold;" />
                        <HBox fx:id="newAppointmentContainer" alignment="CENTER_LEFT" spacing="10" visible="false" />
                    </VBox>
                    
                    <!-- Revenue Summary Card -->
                    <VBox fx:id="revenueSummaryCard" minHeight="150" prefWidth="280" spacing="15" styleClass="card">
                        <Label style="-fx-text-fill: #616161; -fx-font-size: 14px;" text="DOANH THU THÁNG" />
                        <Label fx:id="monthlyRevenueLabel" style="-fx-text-fill: -primary-dark; -fx-font-size: 36px; -fx-font-weight: bold;" />
                        <HBox fx:id="revenueChangeContainer" alignment="CENTER_LEFT" spacing="10" visible="false" />
                    </VBox>
                </HBox>
                
                <!-- Main Content Area -->
                <HBox alignment="TOP_CENTER" spacing="25">
                    <!-- Upcoming Appointments -->
                    <VBox prefWidth="600" spacing="15" styleClass="card">
                        <Label style="-fx-text-fill: -primary-dark; -fx-font-size: 16px; -fx-font-weight: bold;" text="CUỘC HẸN SẮP TỚI" />
                        <TableView fx:id="upcomingAppointmentsTable">
                            <columns>
                                <TableColumn fx:id="patientNameColumn" prefWidth="180" text="Bệnh nhân" />
                                <TableColumn fx:id="appointmentTimeColumn" prefWidth="120" text="Thời gian" />
                                <TableColumn fx:id="doctorColumn" prefWidth="150" text="Bác sĩ" />
                                <TableColumn fx:id="statusColumn" minWidth="120.0" prefWidth="100" text="Trạng thái" />
                            </columns>
                        </TableView>
                        <Button fx:id="viewAllAppointmentsButton" style="-fx-background-color: transparent; -fx-text-fill: -primary-color; -fx-font-weight: bold; -fx-border-color: -primary-color; -fx-border-radius: 15;" text="XEM TẤT CẢ" />
                    </VBox>
                    
                    <!-- Quick Actions -->
                    <VBox prefWidth="300" spacing="15" styleClass="card">
                        <Label style="-fx-text-fill: -primary-dark; -fx-font-size: 16px; -fx-font-weight: bold;" text="THAO TÁC NHANH" />
                        <Button fx:id="addPatientButton" style="-fx-alignment: CENTER_LEFT; -fx-padding: 15 20;" styleClass="button" text="Thêm bệnh nhân mới" />
                        <Button fx:id="addAppointmentButton" style="-fx-alignment: CENTER_LEFT; -fx-padding: 15 20;" styleClass="button" text="Đặt lịch hẹn mới" />
                        <Button fx:id="generateReportButton" style="-fx-alignment: CENTER_LEFT; -fx-padding: 15 20;" styleClass="button" text="Tạo báo cáo" />
                        <Region VBox.vgrow="ALWAYS" />
                        <Label style="-fx-text-fill: -primary-dark; -fx-font-size: 16px; -fx-font-weight: bold;" text="THÔNG BÁO" />
                        <ListView fx:id="notificationListView" style="-fx-max-height: 100; -fx-background-color: transparent;" />
                    </VBox>
                </HBox>
                
                <!-- Charts Section -->
                <HBox alignment="TOP_CENTER" spacing="25">
                    <VBox prefWidth="450" spacing="15" styleClass="card">
                        <Label style="-fx-text-fill: -primary-dark; -fx-font-size: 16px; -fx-font-weight: bold;" text="THỐNG KÊ BỆNH NHÂN" />
                        <PieChart fx:id="patientPieChart" />
                    </VBox>
                    
                    <VBox prefWidth="450" spacing="15" styleClass="card">
                        <Label style="-fx-text-fill: -primary-dark; -fx-font-size: 16px; -fx-font-weight: bold;" text="CUỘC HẸN THEO THÁNG" />
                        <BarChart fx:id="appointmentBarChart">
                            <xAxis>
                                <CategoryAxis fx:id="monthAxis" label="Tháng" />
                            </xAxis>
                            <yAxis>
                                <NumberAxis fx:id="appointmentCountAxis" label="Số lượng" />
                            </yAxis>
                        </BarChart>
                    </VBox>
                </HBox>
            </VBox>
        </center>
    </BorderPane>
